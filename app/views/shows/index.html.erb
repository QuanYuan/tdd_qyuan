<h1>Shows List</h1>

<table>

  <thead>
    <tr>
      <th>Show ID</th>
      <th>Show Name</th>
      <th>Show Picture URL</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= link_to show.id, show %></td>
        <td><%= show.name%></td>
        <td><%= show.picture%></td>
        <td><%= link_to "delete", show, method: :delete, data:{confirm:"You sure?"}%></td>
      </tr>
    <% end %>
  </tbody>

</table>

<a href="/shows/new">New Show</a>
